        <presentation>
          <material>
            <mattext texttype="text/html">&lt;div&gt;&lt;span&gt;Under Part 107, what is the requirement regarding maintaining visual line of sight (VLOS) during drone operations?&lt;/span&gt;&lt;/div&gt;</mattext>
          </material>
          <response_lid ident="response1" rcardinality="Single">
            <render_choice>
              <response_label ident="8072">
                <material>
                  <mattext texttype="text/plain">The drone must be within VLOS at all times, but binoculars can be used to enhance vision</mattext>
                </material>
              </response_label>
              <response_label ident="4381">
                <material>
                  <mattext texttype="text/plain">The drone can be operated beyond VLOS with special equipment</mattext>
                </material>
              </response_label>
              <response_label ident="9028">
                <material>
                  <mattext texttype="text/plain">The drone must remain within VLOS of the pilot or a designated visual observer</mattext>
                </material>
              </response_label>
              <response_label ident="1829">
                <material>
                  <mattext texttype="text/plain">VLOS is not required for operations under 100 feet</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="100" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="Yes">
            <conditionvar>
              <varequal respident="response1">8072</varequal>
            </conditionvar>
            <displayfeedback feedbacktype="Response" linkrefid="8072_fb"/>
          </respcondition>
          <respcondition continue="Yes">
            <conditionvar>
