        <presentation>
          <material>
            <mattext texttype="text/html">&lt;div&gt;What are the responsibilities of the remote pilot in command and the visual observer in terms of the visual line of sight? Choose all that apply.&lt;/div&gt;</mattext>
          </material>
          <response_lid ident="response1" rcardinality="Multiple">
            <render_choice>
              <response_label ident="3921">
                <material>
                  <mattext texttype="text/plain">Observing the airspace for other air traffic or hazards</mattext>
                </material>
              </response_label>
              <response_label ident="3808">
                <material>
                  <mattext texttype="text/plain">Determining the uncrewed aircraft's attitude, altitude, and direction of flight</mattext>
                </material>
              </response_label>
              <response_label ident="8957">
                <material>
                  <mattext texttype="text/plain">Knowing the uncrewed aircraft's location</mattext>
                </material>
              </response_label>
              <response_label ident="6032">
                <material>
                  <mattext texttype="text/plain">Determining that the unmanned aircraft does not endanger the life or property of another</mattext>
                </material>
              </response_label>
